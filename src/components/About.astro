---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.webp";
import linkedinIcon from "../assets/linkedin.svg";
import githubIcon from "../assets/github.svg";
import mailIcon from "../assets/mail.svg";
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { ...props } = Astro.props as Props;
---

<section class="w-full max-w-5xl mx-auto px-4 py-20 flex flex-col md:flex-row items-center gap-12 ">
  <figure class="relative w-48 h-48 md:w-64 md:h-64 flex-shrink-0 group">
    <div class="absolute inset-0 bg-violet-500/20 rounded-full blur-2xl -z-10 group-hover:bg-violet-500/30 transition-colors duration-500"></div>
    <Image
      src={avatar}
      alt="Avatar of Pedro Moreira Pires"
      width={550}
      height={550}
      class="w-full h-full object-cover rounded-full border-4 border-slate-800 shadow-2xl transition-transform duration-500 group-hover:scale-105"
      loading="eager"
    />
  </figure>
  
  <div class="flex-1 space-y-6 text-center md:text-left">
    <ul class="flex items-center justify-center md:justify-start gap-6 list-none p-0 m-0">
      <li>
        <a target="_blank" href="https://www.linkedin.com/in/pmoreirapires/" class="block transition-transform hover:scale-110 hover:opacity-80">
          <img src={linkedinIcon.src} alt="LinkedIn" width="32" height="32" loading="eager" class="w-8 h-8 filter invert brightness-0 hover:brightness-100 transition-all" />
        </a>
      </li>
      <li>
        <a target="_blank" href="https://github.com/PedroMoreiraPires" class="block transition-transform hover:scale-110 hover:opacity-80">
          <img src={githubIcon.src} alt="GitHub" width="32" height="32" loading="eager" class="w-8 h-8 filter invert brightness-0 hover:brightness-100 transition-all" />
        </a>
      </li>
      <li>
        <a target="_blank" href="mailto:pmoreirapiress01@educarex.es" class="block transition-transform hover:scale-110 hover:opacity-80">
          <img src={mailIcon.src} alt="Email" width="32" height="32" loading="eager" class="w-8 h-8 filter invert brightness-0 hover:brightness-100 transition-all" />
        </a>
      </li>
    </ul>
    
    <div class="text-lg md:text-xl text-slate-200 leading-relaxed">
      <slot />
    </div>
  </div>
</section>
