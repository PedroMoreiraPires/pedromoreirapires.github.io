---
import linkedinIcon from '../assets/linkedin.svg';
import githubIcon from '../assets/github.svg';
import mailIcon from '../assets/mail.svg';
---

<footer class="py-12 flex flex-col items-center justify-center gap-8 text-slate-200">
  <ul class="flex items-center gap-6 m-0 p-0 list-none">
    <li>
      <a target="_blank" href="https://www.linkedin.com/in/pmoreirapires/" class="block transition-transform hover:scale-110 hover:opacity-80">
		    <img src={linkedinIcon.src} alt="LinkedIn" width="32" height="32" loading="lazy" class="w-8 h-8 md:w-10 md:h-10 filter invert brightness-0 hover:brightness-100 transition-all" />
      </a>
    </li>
    <li>
      <a target="_blank" href="https://github.com/PedroMoreiraPires/" class="block transition-transform hover:scale-110 hover:opacity-80">
		    <img src={githubIcon.src} alt="GitHub" width="32" height="32" loading="lazy" class="w-8 h-8 md:w-10 md:h-10 filter invert brightness-0 hover:brightness-100 transition-all" />
      </a>
    </li>
    <li>
      <a target="_blank" href="mailto:pmoreirapiress01@educarex.es" class="block transition-transform hover:scale-110 hover:opacity-80">
		    <img src={mailIcon.src} alt="Email" width="32" height="32" loading="lazy" class="w-8 h-8 md:w-10 md:h-10 filter invert brightness-0 hover:brightness-100 transition-all" />
      </a>
    </li>
  </ul>
</footer>
