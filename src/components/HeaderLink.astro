---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<li>
	<a href={href} class:list={[className, { "text-violet-400 underline": isActive }, "inline-block text-slate-200 hover:text-violet-400 hover:underline decoration-2 underline-offset-4 transition-colors"]} download="CV_PedroMoreiraPires" aria-current={isActive ? 'page' : undefined} {...props}>
		<slot />
	</a>
</li>
