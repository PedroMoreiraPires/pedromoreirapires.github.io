---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, UI_TEXT } from "../consts";
import { ClientRouter } from "astro:transitions";

const text = UI_TEXT.en;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead
      title="404 - Page Not Found"
      description="Page not found"
    />
    <ClientRouter />
  </head>
  <body class="bg-slate-950 text-slate-300 antialiased overflow-x-hidden flex flex-col min-h-screen">
    <div class="fixed inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-violet-900/20 via-slate-950 to-slate-950 -z-50 pointer-events-none"></div>
    
    <Header title={SITE_TITLE.en} cv={text.header.cv} lang="en" />
    
    <main class="flex-grow flex flex-col items-center justify-center text-center px-4">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-violet-600/20 rounded-full blur-[100px] -z-10 pointer-events-none"></div>
      
      <h1 class="text-9xl font-bold text-slate-100 mb-4">404</h1>
      <p class="text-2xl text-slate-400 mb-8">Page not found</p>
      <a href="/" class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium bg-violet-600 text-white hover:bg-violet-500 hover:shadow-lg hover:shadow-violet-500/20 transition-all duration-200">
        Go back home
      </a>
    </main>
    <Footer />
  </body>
</html>
