---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

import Home from "../../components/Home.astro";
import About from "../../components/About.astro";
import Projects from "../../components/Projects.astro";
import { SITE_TITLE, SITE_DESCRIPTION, UI_TEXT } from "../../consts";
import { ClientRouter } from "astro:transitions";
import Skills from "../../components/Skills.astro";

const text = UI_TEXT.es;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <BaseHead
      title={SITE_TITLE.es}
      description={SITE_DESCRIPTION.es}
    />
    <ClientRouter />

  </head>
  <body class="bg-slate-950 text-slate-200 antialiased overflow-x-hidden">
    <div class="fixed inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-violet-900/20 via-slate-950 to-slate-950 -z-50 pointer-events-none"></div>
    
    <Header title={SITE_TITLE.es} cv={text.header.cv} lang="es" />
    <main class="pb-32">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-violet-600/20 rounded-full blur-[100px] -z-10 pointer-events-none"></div>
      <Home name={text.home.name} description={text.home.description} caption={text.home.caption}/>

      <About>
        <Fragment set:html={text.about} />
      </About>

      <Projects title={text.projects.title} lang="es"/>
      
      <Skills lang="es" hardSkillTitle={text.skills.hard} softSkillTitle={text.skills.soft}/>
    </main>
    <Footer />
  </body>
</html>
